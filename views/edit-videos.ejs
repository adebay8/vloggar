<%- include ("layouts/header") %>
    <div class="container my-4">
        <div class="row">
            <div class="col-md-12">
                <form action="/edit" method="POST" enctype="multipart/form-data">
                    <input type="hidden" name="videoId" value="<%= video._id %>">
                    <img src="<%= baseUrl + video.thumbnail %>" alt="" class="img-fluid">
                    <div class="form-group">
                        <label>Select thumbnail</label>
                        <input type="file" accept="image/*" class="form-control-file" name="thumbnail">
                    </div>
                    <div class="form-group">
                        <label>Title</label>
                        <input type="text" name="title" class="form-control" required value="<%= video.title %>">
                    </div>
                    <div class="form-group">
                        <label>Description</label>
                        <textarea name="description" class="form-control" rows="10"><%= video.description %> </textarea>
                    </div>
                    <div class="form-group">
                        <label>Tags</label>
                        <input type="text" name="tags" class="form-control" value="<%= video.tags %> ">
                    </div>
                    <div class="form-group">
                        <label>Category</label>
                        <select name="category" id="" class="form-control">
                            <option value="">Select category</option>
                            <option value="Technology" <%= video.category == "Technology" ? "selected" : "" %>>Technology</option>
                            <option value="Gaming" <%= video.category == "Gaming" ? "selected" : "" %>>Gaming</option>
                            <option value="Education" <%= video.category == "Education" ? "selected" : "" %>>Education</option>
                            <option value="Comedy" <%= video.category == "Comedy" ? "selected" : "" %>>Comedy</option>
                            <option value="Sports" <%= video.category == "Sports" ? "selected" : "" %>>Sports</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Playlist</label>
                        <select name="playlist" class="form-control "id="">
                            <option value="">Select playlist</option>
                            <% user.playlists.forEach(playlist => { %>
                                <option value="<%= playlist._id %>" <%= video.playlist == playlist._id ? "selected" : "" %> ><%= playlist.title %></option>
                            <% }) %> 
                        </select>
                    </div>
                    <input type="submit" class="btn btn-warning" value="Update Video">
                </form>
            </div>
        </div>
    </div>
<%- include ("layouts/footer") %>
